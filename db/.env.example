# Database Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=mydatabase
MYSQL_USER=delphi
MYSQL_PASSWORD=your_secure_app_password_here

# Optional MySQL Configuration
MYSQL_ALLOW_EMPTY_PASSWORD=no
MYSQL_RANDOM_ROOT_PASSWORD=no

# Container Configuration
MYSQL_HOST=0.0.0.0
MYSQL_PORT=3306

# Performance Tuning (optional)
MYSQL_INNODB_BUFFER_POOL_SIZE=128M
MYSQL_MAX_CONNECTIONS=100
MYSQL_QUERY_CACHE_SIZE=16M

# Development Settings
MYSQL_LOG_BIN=mysql-bin
MYSQL_EXPIRE_LOGS_DAYS=7

# Security Notes:
# 1. Copy this file to .env and replace placeholder passwords
# 2. Use strong passwords (min 16 characters with mixed case, numbers, symbols)
# 3. Never commit .env files with real credentials to version control
# 4. For production, use Docker secrets or external secret management
